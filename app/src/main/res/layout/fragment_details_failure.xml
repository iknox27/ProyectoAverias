<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.DetailsFailureFragment">




        <LinearLayout
            android:id="@+id/id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:paddingLeft="16dp"
                android:id="@+id/txt12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Número de id"
                android:textSize="18sp"
                android:textColor="#000"
                android:paddingBottom="5dp"
                />

            <TextView
                android:paddingLeft="16dp"
                android:layout_below="@+id/txt12"
                android:id="@+id/txtTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="z"
                android:textColor="#A9A9A9"
                android:textSize="16sp"
                android:paddingBottom="16dp"
                />
        </LinearLayout>


    <LinearLayout
        android:id="@+id/type"
        android:layout_below="@+id/id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:paddingLeft="16dp"
            android:id="@+id/txt_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tipo de Averia"
            android:textSize="18sp"
            android:textColor="#000"
            android:paddingBottom="5dp"
            />

        <TextView
            android:paddingLeft="16dp"
            android:layout_below="@+id/txt12"
            android:id="@+id/txt_type_change"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="z"
            android:textColor="#A9A9A9"
            android:textSize="16sp"
            android:paddingBottom="16dp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/date"
        android:layout_below="@+id/type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:paddingLeft="16dp"
            android:id="@+id/txt_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha"
            android:textSize="18sp"
            android:textColor="#000"
            android:paddingBottom="5dp"
            />

        <TextView
            android:paddingLeft="16dp"
            android:layout_below="@+id/txt12"
            android:id="@+id/txt_date_change"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="z"
            android:textColor="#A9A9A9"
            android:textSize="16sp"
            android:paddingBottom="16dp"
            />
    </LinearLayout>

    <LinearLayout
    android:id="@+id/user"
    android:layout_below="@+id/date"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:paddingLeft="16dp"
        android:id="@+id/txt_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Usuario"
        android:textSize="18sp"
        android:textColor="#000"
        android:paddingBottom="5dp"
        />

    <TextView
        android:paddingLeft="16dp"
        android:layout_below="@+id/txt12"
        android:id="@+id/txt_user_change"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="z"
        android:textColor="#A9A9A9"
        android:textSize="16sp"
        android:paddingBottom="16dp"
        />
</LinearLayout>

    <LinearLayout
        android:id="@+id/description"
        android:layout_below="@+id/user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:paddingLeft="16dp"
            android:id="@+id/txt_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripción"
            android:textSize="18sp"
            android:textColor="#000"
            android:paddingBottom="5dp"
            />

        <TextView
            android:paddingLeft="16dp"
            android:layout_below="@+id/txt12"
            android:id="@+id/txt_description_change"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="z"
            android:textColor="#A9A9A9"
            android:textSize="16sp"
            android:paddingBottom="16dp"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/location"
        android:layout_below="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:paddingLeft="16dp"
            android:id="@+id/txt_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ubicación"
            android:textSize="18sp"
            android:textColor="#000"
            android:paddingBottom="5dp"
            />

        <TextView
            android:paddingLeft="16dp"
            android:layout_below="@+id/txt12"
            android:id="@+id/txt_location_change"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="z"
            android:textColor="#A9A9A9"
            android:textSize="16sp"
            android:paddingBottom="16dp"
            />
    </LinearLayout>

</RelativeLayout>