<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_name_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true">

        <EditText
            android:id="@+id/input_name_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:inputType="text"
            android:maxLines="1"
            android:hint="Nombre" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_type_content"
        android:layout_below="@+id/input_layout_name_content"
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <EditText
            android:id="@+id/input_type_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLines="1"
            android:hint="Tipo" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_description_content"
        android:layout_below="@+id/input_layout_type_content"
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <EditText
            android:id="@+id/input_description_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="DescripciÃ³n" />

    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:id="@+id/dateAdd"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/input_layout_description_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txt_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha"
            android:textSize="18sp"
            android:textColor="#000"
            android:paddingBottom="5dp"
            />

        <TextView
            android:layout_below="@+id/txt12"
            android:id="@+id/txt_date_change"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Escoja la fecha"
            android:textColor="#A9A9A9"
            android:textSize="16sp"
            android:paddingBottom="16dp"
            />
    </LinearLayout>



    <Button
        android:id="@+id/addFailure"
        android:layout_below="@+id/dateAdd"
        android:layout_width="160dp"
        android:layout_height="56dp"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:text="Agregar"
        android:background="@color/colorAccent"
        android:textColor="#fff"
        />

</RelativeLayout>
