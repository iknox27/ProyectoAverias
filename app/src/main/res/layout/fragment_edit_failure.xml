<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_name_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true">

        <EditText
            android:id="@+id/input_name_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:maxLines="1"
            android:hint="Nombre" />

    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/name_text_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/red"
        android:layout_below="@+id/input_layout_name_content"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="6dp"
        android:text="error"
        android:visibility="invisible"
        android:textSize="11sp"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_type_content"
        android:layout_below="@+id/name_text_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <EditText
            android:id="@+id/input_type_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLines="1"
            android:hint="Tipo" />

    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/type_text_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/red"
        android:layout_below="@+id/input_layout_type_content"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="6dp"
        android:text="error"
        android:visibility="invisible"
        android:textSize="11sp"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_layout_description_content"
        android:layout_below="@+id/type_text_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <EditText
            android:id="@+id/input_description_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="DescripciÃ³n" />

    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/des_text_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/red"
        android:layout_below="@+id/input_layout_description_content"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="6dp"
        android:text="error"
        android:visibility="invisible"
        android:textSize="11sp"/>

    <LinearLayout
        android:id="@+id/date_edit"
        android:layout_below="@+id/des_text_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txt_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha"
            android:textSize="18sp"
            android:textColor="#000"
            android:paddingStart="6dp"
            android:paddingBottom="5dp"
            />

        <TextView
            android:layout_below="@+id/txt12"
            android:id="@+id/txt_date_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Escoja la fecha"
            android:textColor="#A9A9A9"
            android:textSize="16sp"
            android:paddingStart="6dp"
            android:paddingBottom="16dp"
            />
    </LinearLayout>



    <Button
        android:id="@+id/edit_failure"
        android:layout_below="@+id/date_edit"
        android:layout_width="160dp"
        android:layout_height="56dp"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:text="Editar"
        android:background="@color/colorAccent"
        android:textColor="#fff"
        />

</RelativeLayout>
