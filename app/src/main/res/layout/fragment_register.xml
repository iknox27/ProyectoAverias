<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/colorfondo2"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/edittext_rounded"
            android:hint="@string/person_name"
            android:inputType="text"
            android:theme="@style/EditTextTheme"
            android:singleLine="true"/>

        <TextView
            android:id="@+id/name_text_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:layout_below="@+id/name"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="6dp"
            android:text="error"
            android:visibility="invisible"
            android:textSize="11sp"/>

        <EditText
            android:id="@+id/email"
            android:layout_below="@+id/name_text_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/edittext_rounded"
            android:hint="@string/email"
            android:singleLine="true"
            android:inputType="textEmailAddress"/>

        <TextView
            android:id="@+id/email_text_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:layout_below="@+id/email"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="6dp"
            android:text="error"
            android:visibility="invisible"
            android:textSize="11sp"/>

        <EditText
            android:id="@+id/phoneNumber"
            android:layout_below="@+id/email_text_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/edittext_rounded"
            android:hint="@string/phone_number"
            android:singleLine="true"
            android:inputType="phone"/>

        <TextView
            android:id="@+id/phoneNumber_text_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:layout_below="@+id/phoneNumber"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="6dp"
            android:text="error"
            android:visibility="invisible"
            android:textSize="11sp"/>

        <EditText
            android:id="@+id/userid"
            android:layout_below="@+id/phoneNumber_text_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/edittext_rounded"
            android:hint="@string/user_id_hint"
            android:singleLine="true"
            android:maxLength="15"
            android:inputType="number"/>

        <TextView
            android:id="@+id/userid_text_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:layout_below="@+id/userid"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="6dp"
            android:text="error"
            android:visibility="invisible"
            android:textSize="11sp"/>

        <EditText
            android:layout_below="@+id/userid_text_error"
            android:id="@+id/usernameRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:maxLength="15"
            android:background="@drawable/edittext_rounded"
            android:hint="@string/usernameHint"
            android:singleLine="true"
            android:inputType="text"/>

        <TextView
            android:id="@+id/usernameRegister_text_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:layout_below="@+id/usernameRegister"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="6dp"
            android:text="error"
            android:visibility="invisible"
            android:textSize="11sp"/>

        <EditText
            android:id="@+id/passwordRegister"
            android:layout_below="@+id/usernameRegister_text_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/edittext_rounded"
            android:hint="@string/password"
            android:singleLine="true"
            android:maxLength="15"
            android:inputType="textPassword"/>

        <TextView
            android:id="@+id/passwordRegister_text_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:layout_below="@+id/passwordRegister"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="6dp"
            android:text="error"
            android:textSize="11sp"
            android:visibility="invisible"/>

        <Button
            android:id="@+id/addUser"
            android:layout_below="@+id/passwordRegister_text_error"
            android:layout_width="156dp"
            android:layout_height="56dp"
            android:layout_centerHorizontal="true"
            android:background="@color/colorPrimaryDark"
            android:textColor="#fff"
            android:text="@string/crear_usuario"
            />

    </RelativeLayout>

</ScrollView>
